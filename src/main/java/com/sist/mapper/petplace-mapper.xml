 </select>
 <select id="petplaceTotalPage" resultType="int" parameterType="hashmap">
   SELECT CEIL(COUNT(*)/9.0) FROM rcpg_4 WHERE c_no BETWEEN #{s} AND #{e}
   
 </select>
 
