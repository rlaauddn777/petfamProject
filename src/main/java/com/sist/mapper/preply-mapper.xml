<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.mapper.reply-mapper">
  <!-- 목록 -->
  <!-- 
        ${} => ''사용하지 않는다
        #{} => ''사용한다
        
        UPDATE board SET =>#{board} ==> 'board'  ==> ${board} => board
        name='홍길동' ==> #{name}
        WHERE no=1
        
        => 컬럼명 , 테이블명 ==> ${}
        => 일반 데이터      ==> #{}
   -->
  <update id="countIncrement" parameterType="PReplyVO">
    UPDATE ${table_name} SET
    rcount=rcount+1
    WHERE pre_no=#{bno}
  </update>
  <select id="preplyListData" resultType="PReplyVO" parameterType="PReplyVO">
    SELECT  pre_no,bno,type,id,name,msg,TO_CHAR(regdate,'YYYY-MM-DD HH24:MI:SS') as dbday
    FROM p_repl_4
    WHERE bno=#{bno} AND type=#{type}
  </select>
  <!-- 추가 -->
  <insert id="preplyInsert" parameterType="PReplyVO">
    <!-- sequence 
         order 순서 => BEFORE는 먼저 수행 
         고급 => JOIN , SUBQUERY , 동적쿼리 
    -->
    <selectKey keyProperty="no" resultType="int" order="BEFORE">
      SELECT NVL(MAX(pre_no)+1,1) as pre_no FROM p_repl_4
    </selectKey>
    INSERT INTO p_repl_4 VALUES(
      #{pre_no},
      #{bno},
      #{type},
      #{id},
      #{name},
      #{msg},
      SYSDATE
    )
  </insert>
  <!-- 수정 -->
  <!-- 삭제 -->
  <delete id="preplyDelete" parameterType="int">
   DELETE FROM p_repl_4
   WHERE pre_no=#{pre_no}
  </delete>
  
  <update id="preplyUpdate" parameterType="PReplyVO">
   UPDATE p_repl_4 SET
   msg=#{msg}
   WHERE pre_no=#{pre_no}
  </update>
</mapper>